# Isaac Sim Orchestration Configuration

# Maximum number of concurrent instances (default: 4)
ISAAC_MAX_INSTANCES=4

# Docker image for Isaac Sim
ISAAC_ISAAC_SIM_IMAGE=nvcr.io/nvidia/isaac-sim:2023.1.1

# Port base configurations
ISAAC_HTTP_PORT_BASE=8211
ISAAC_WEBRTC_PORT_BASE=8011
ISAAC_NATIVE_PORT_BASE=8899

# Resource limits per container
ISAAC_MEMORY_LIMIT=8g
ISAAC_SHM_SIZE=2g

# GPU configuration
ISAAC_GPU_ENABLED=true

# WebRTC configuration
ISAAC_ENABLE_WEBRTC=true

# Docker network
ISAAC_DOCKER_NETWORK=bridge
